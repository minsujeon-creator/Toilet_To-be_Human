FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      omega;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 -1 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    walls
    {
        type            fixedValue;
        value           uniform 0;  // fixed omega on walls
    }

    vent
    {
        type        zeroGradient;
    }

    toilet
    {
        type            omegaWallFunction;
        value           uniform 0;
    }
    human
    {
        type            omegaWallFunction;
        value           uniform 0;
    }
    floor
    {
        type            omegaWallFunction;
        value           uniform 0;
    }
    symmCut
    {
        type            symmetryPlane;
    }
}

